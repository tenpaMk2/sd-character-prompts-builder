---
import { type ColorName } from "../libs/prompts-store";

interface Props {
  colorName: ColorName;
}

const { colorName } = Astro.props;

const colorRGBDefine: { readonly [K in ColorName]: string } = {
  none: `0% 0% 0% / 0%`,
  aqua: `0% 100% 100%`,
  black: `0% 0% 0%`,
  blue: `0% 0% 100%`,
  brown: `65% 16% 16%`,
  green: `0% 100% 0%`,
  grey: `50% 50% 50%`,
  orange: `100% 65% 0%`,
  purple: `88% 12% 88%`,
  pink: `100% 75% 80%`,
  red: `100% 0% 0%`,
  white: `100% 100% 100%`,
  yellow: `100% 100% 0%`,
  blonde: `94% 88% 7%`,
  "light-blue": `33% 84% 100%`,
  "dark-blue": `16% 25% 49%`,
  "light-brown": `91% 75% 30%`,
  "dark-green": `17% 35% 11%`,
  "light-green": `72% 89% 67%`,
  "light-purple": `89% 67% 94%`,
};

const colorRGB = colorRGBDefine[colorName];
---

<i class={colorName}></i>

<style define:vars={{ colorRGB }}>
  i {
    display: inline-block;
    width: 2em;
    aspect-ratio: 1 / 1;
    background-color: rgb(var(--colorRGB));
    border: solid 0.2em white;
    border-radius: 9999rem;
  }

  i.none {
    border: dashed;
  }
</style>
